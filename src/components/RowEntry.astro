---
export interface Props {
  name: string;
  title?: string;
  subTitle?: string;
}

const { name, title, subTitle } = Astro.props;
---

<div class="row-entry">
  <div class="entry-date">{name}</div>
  <div class="entry-content">
    <div class="entry-titles">
      {title && <span class="font-bold">{title}</span>}
      {subTitle && <span class="entry-subtitle">{subTitle}</span>}
    </div>
    <slot></slot> 
  </div>
</div>